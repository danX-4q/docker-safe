#!/bin/bash

TEMP=`getopt -o s:d:vh --long safe_dir:,depbin_dir:,verbose,help -- "$@"`

if [ $? != 0 ] ; then echo "Terminating..." >&2 ; exit 1 ; fi

# Note the quotes around `$TEMP': they are essential!
eval set -- "$TEMP"

########################################
########################################
########################################

SAFE_DIR="$PWD/"
DEPBIN_DIR="/home/s-ed/depends_bin/"
VERBOSE="false"

function usage {
  echo "Usage: $0 [-s|--safe_dir SAFE_DIR] [-d|--depbin_dir DEPBIN_DIR] [-v|--verbose] [-h|--help]"
  cat <<EOF
Options:
  -s|--safe_dir		default: $PWD/
  -d|--depbin_dir	default: /home/s-ed/depends_bin/
  -v|--verbose		true or false; default: false
  -h|--help		show help message

EOF
}

function dump_args {
  echo "=========="
  echo "cmd args:"
  echo "SAFE_DIR = $SAFE_DIR"
  echo "DEPBIN_DIR = $DEPBIN_DIR"
  echo "VERBOSE = $VERBOSE"
}

########################################
########################################
########################################

while true; do
  case "$1" in
    -s | --safe_dir )
      SAFE_DIR="$2"; shift 2 ;;
    -d | --depbin_dir )
      DEPBIN_DIR="$2"; shift 2 ;;
    -v | --verbose )
      VERBOSE="true"; shift ;;
    -h | --help )
      usage; exit 0;;
    -- ) 
      shift; break ;;
    * )
      break ;;
  esac
done

[ ${VERBOSE} = "true" ] && dump_args

########################################
########################################
########################################


DIFF_OUTPUT=$( diff -r --brief "$DEPBIN_DIR" "$SAFE_DIR/depends/" 2>/dev/null | 
               grep -vE ': built|: SDKs|: sources|: work|: x86_64-pc-linux-gnu|: x86_64-w64-mingw32|: i686-w64-mingw32|: x86_64-apple-darwin11' )
RET_VAL=$?
[[ $RET_VAL != 0 && $RET_VAL != 1 ]] && {
  [ ${VERBOSE} = "true" ] && {
    echo "=========="
    echo "'diff xxx | grep yyy' exit code: $RET_VAL, then $0 exit $RET_VAL also"
  }
  exit $RET_VAL
}

[ -z "${DIFF_OUTPUT}" ]
RET_VAL=$?

[ ${VERBOSE} = "true" ] && {
  echo "==========" 
  echo "'diff xxx | grep yyy' output:" 
  echo $DIFF_OUTPUT 
  echo "=========="
  echo "$0 exit code: $RET_VAL"
}

exit $RET_VAL

